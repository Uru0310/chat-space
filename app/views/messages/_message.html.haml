.main-chat__body__list
  .main-chat__body__list__upper
    .main-chat__body__list__upper__name
      = message.user.name
    .main-chat__body__list__upper__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main-chat__body__list__lower
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?