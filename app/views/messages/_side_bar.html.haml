.side-bar
  .side-bar__header
    .side-bar__header__item
      .side-bar__header__item__name
        = current_user.name
      .side-bar__header__item__icon
        .side-bar__header__item__icon__edit
          = link_to new_group_path do
            = icon('far', 'edit')
        .side-bar__header__item__icon__cog
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')
  .side-bar__group
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group), class:'group' do
          .group__name
            = group.name
          .group__message
            = group.show_last_message